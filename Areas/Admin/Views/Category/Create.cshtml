@model MyMvcProject.Areas.Admin.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="col-md-6">
    <div class="card mb-4">
        <h5 class="card-header">Form Create</h5>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Name" class="control-label"></label>
